@page
@model Sommerland.Web.Pages.SearchResultsModel
@{
    ViewData["Title"] = "SearchResults";
}

<h1>SearchResults</h1>

@{ 
    if (Model.Result != null)
    {
        <div>
            <h1>@Model.Result.Name</h1>
            <p><strong>Category:</strong> @Model.Result.Category</p>
            <p><strong>Status:</strong> @Model.Result.Status</p>
            <p><strong>Description:</strong> @Model.Result.Description</p>
            <p><strong>Number Of Shutdowns:</strong> @Model.Result.NumberOfShutdowns()</p>
            <p><strong>Number of Days since last Shutdown:</strong> @Model.Result.DaysSinceLastShutdown()</p>
        </div>
    }
}
